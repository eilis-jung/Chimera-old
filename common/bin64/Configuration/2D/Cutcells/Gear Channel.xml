<?xml version="1.0" encoding="utf-8"?>
<ChimeraConfig>
  <SimulationType>realTimeSimulation</SimulationType>
  <boundaryConditionsFile>Boundary Conditions/2D/leftInflow.bc</boundaryConditionsFile>
  <Grid>
    <InitialPoint x="0.0" y="0.0"/>
    <FinalPoint x="2.0" y="1.0"/>
    <!--Final point is an approximation, since it can be modified to suit grid spacing-->
    <Spacing>0.0625</Spacing>
  </Grid>
  <RigidObject>
    <position x="0.40687" y="0.50687"></position>
    <Geometry>
      <numSubdivisions>250</numSubdivisions>
      <GearLine>
        <Radius>0.125125</Radius>
        <NumberOfDents>8</NumberOfDents>
      </GearLine>
    </Geometry>
  </RigidObject>
  <SimulationConfig>
    <TotalTime value="10.125"></TotalTime>
  </SimulationConfig>
  <Objects>
  </Objects>
  <FlowSolverConfig>
    <FlowSolverType>CutCell</FlowSolverType>
    <SolidWallType>
      <!--<FreeSlip></FreeSlip>-->
      <NoSlip></NoSlip>
    </SolidWallType>
    <AdvectionMethod>
      <ParticleBasedAdvection>
        <PositionIntegration>
          <Method>rungeKutta2</Method>
          <Interpolant>
            <Method>CubicStreamfunction</Method>
          </Interpolant>
        </PositionIntegration>
        <GridToParticle>
          <Method>FLIP</Method>
        </GridToParticle>
        <ParticleToGrid>
          <GridArrangement>Staggered</GridArrangement>
          <Kernel>SPH</Kernel>
          <KernelDanglingCells>??</KernelDanglingCells>
        </ParticleToGrid>
        <Sampler>
          <ParticlesPerCell>32</ParticlesPerCell>
          <Type>Stratified</Type>
          <ResampleParticles>true</ResampleParticles>
        </Sampler>
      </ParticleBasedAdvection>
    </AdvectionMethod>
    <ProjectionMethod>
      <Platform>CPU</Platform>
    </ProjectionMethod>
    <FarFieldMethod>
      <Standard></Standard>
    </FarFieldMethod>
    <PressureMethod>
      <ConjugateGradient>
        <Platform>GPU</Platform>
        <Tolerance>0.001</Tolerance>
        <MaxIterations>2000</MaxIterations>
        <Preconditioner>NoPreconditioner</Preconditioner>
      </ConjugateGradient>
    </PressureMethod>
  </FlowSolverConfig>
</ChimeraConfig>

